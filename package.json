{
  "name": "trunk-tools-takehome",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "tsc",
    "dev": "bun --watch run src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "vitest run --no-watch",
    "test:watch": "vitest",
    "test:unit": "vitest run --no-watch \"src/__tests__/unit/\"",
    "test:integration": "vitest run --no-watch \"src/__tests__/integration/\"",
    "test:coverage": "vitest run --no-watch --coverage",
    "test:ci": "vitest run --no-watch --coverage",
    "test:load": "artillery run src/__tests__/load/scenarios/health-api.yml",
    "test:load:report": "artillery run --output report.json src/__tests__/load/scenarios/health-api.yml && artillery report report.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "artillery": "^2.0.22",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.5.3",
    "redis-mock": "^0.56.3",
    "supertest": "^7.1.0",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@shelf/jest-mongodb": "^5.1.0",
    "@types/jest": "^29.5.14",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "ts-jest": "^29.3.0"
  }
}
