{
  "name": "trunk-tools-takehome",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "tsc",
    "dev": "bun --watch run src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose run --rm test",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:unit": "bun test \"src/__tests__/unit/\"",
    "test:integration": "bun test \"src/__tests__/integration/\"",
    "test:hello": "bun test \"src/__tests__/hello-world/\"",
    "test:coverage": "bun test --coverage",
    "test:ci": "bun test --coverage",
    "test:timeout": "bun test --timeout 20000",
    "seed:test-users": "bun run src/scripts/seed-users.ts",
    "test:load:build": "bun run src/__tests__/load/build.ts",
    "test:load": "bun run seed:test-users && bun run test:load:build && bun run src/__tests__/load/run-load-tests.ts",
    "test:load:report": "bun run seed:test-users && bun run test:load:build && bun run src/__tests__/load/run-load-tests.ts --report",
    "test:load:currency": "bun run seed:test-users && artillery run --config src/__tests__/load/scenarios/currency-convert-api.yml",
    "test:load:currency:report": "bun run seed:test-users && artillery run --output report.json --config src/__tests__/load/scenarios/currency-convert-api.yml && artillery report report.json",
    "test:api": "bun test \"src/__tests__/integration/api/\""
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "@types/bun": "latest",
    "@types/express": "^5.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.13.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.0.9",
    "artillery": "^2.0.22",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "mongodb-memory-server": "^10.1.4",
    "prettier": "^3.5.3",
    "redis-mock": "^0.56.3",
    "supertest": "^7.1.0",
    "typescript-eslint": "^8.28.0",
    "vitest": "^3.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@shelf/jest-mongodb": "^5.1.0",
    "@types/artillery": "^1.7.4",
    "@types/jest": "^29.5.14",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "ioredis": "^5.6.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "mongoose": "^8.13.0",
    "ts-jest": "^29.3.0",
    "uuid": "^11.1.0"
  }
}
